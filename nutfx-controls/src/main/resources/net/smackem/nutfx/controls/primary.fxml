<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ComboBox?>
<?import net.smackem.nutfx.controls.NutTextField?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.smackem.nutfx.controls.PrimaryController">
   <padding>
      <Insets bottom="1" left="1" right="1" top="1"/>
   </padding>
   <center>
      <VBox alignment="CENTER">
         <Label text="Primary View"/>
         <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#switchToSecondary"/>
      </VBox>
   </center>
   <bottom>
      <NutTextField fx:id="nutInputText"
                    onAction="#handleNutInput"
                    style="-fx-font-family: 'Cascadia Code', monospace"/>
   </bottom>
</BorderPane>
